<!DOCTYPE html>
<html>
  <head>
    <title>Rented Apartments</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <style>
      body {
        background: linear-gradient(to right, #de6262, #ffb88c);
        font-family: "Poppins", sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        align-items: center;
        justify-content: flex-start;
      }

      h2 {
        text-align: center;
        margin-top: 30px;
        color: #333;
      }

      .manager-links {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
      }

      .manager-links a {
        text-decoration: none;
        color: #de6262;
        margin: 5px 10px;
        padding: 8px 12px;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.8);
        transition: background-color 0.3s ease;
      }

      .manager-links a:hover {
        background-color: #ffb88c;
        color: white;
      }

      table {
        width: 90%;
        max-width: 1400px;
        border-collapse: collapse;
        margin-top: 20px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      table,
      th,
      td {
        border: 1px solid #ddd;
        padding: 12px 15px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
      }

      td a {
        color: #de6262;
        text-decoration: none;
      }

      td a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div>
      <h2>Rented Apartments</h2>
    </div>

    <div class="manager-links">
      <a href="/manager">Home</a>
      <a href="/logout">Logout</a>
      <a href="/search">Search Home</a>
      <a href="/manager/profile">Edit Profile</a>
      <a href="/manager/pendingCustomers">Pending Customer</a>
      <a href="/manager/pendingHouseowners">Pending Houseowners</a>
      <a href="/manager/view_Available">House to-let</a>
      <a href="/manager/view_Customers">Available customer</a>
      <a href="/manager/view_Owners">House Owners</a>
      <!-- <a href="/manager/view_Rented">Rented Apartments</a> -->
    </div>

    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Division</th>
        <th>Area</th>
        <th>Address</th>
        <th>Description</th>
        <th>Size</th>
        <th>Price</th>
        <th>Review</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      <% for(var i=0; i < userlist.length; i++){ %>
      <tr>
        <td><%= userlist[i].houseid %></td>
        <td><%= userlist[i].housename %></td>
        <td><%= userlist[i].division %></td>
        <td><%= userlist[i].area %></td>
        <td><%= userlist[i].address %></td>
        <td><%= userlist[i].description %></td>
        <td><%= userlist[i].size %></td>
        <td><%= userlist[i].price %></td>
        <td><%= userlist[i].review %></td>
        <td><%= userlist[i].status %></td>
        <td>
          <a href="/manager/view_Available/<%= userlist[i].houseid %>"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
