<!DOCTYPE html>
<html>
  <head>
    <title>House owners</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <style>
      body {
        background: linear-gradient(to right, #2193b0, #6dd5ed);
        font-family: "Poppins", sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        align-items: center;
        justify-content: flex-start;
      }

      h2 {
        text-align: center;
        margin-top: 30px;
        color: #333;
      }

      .header-links {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
      }

      .header-links a {
        text-decoration: none;
        color: #2193b0;
        margin: 5px 10px;
        padding: 8px 12px;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.8);
        transition: background-color 0.3s ease;
      }

      .header-links a:hover {
        background-color: #6dd5ed;
        color: white;
      }

      table {
        width: 80%;
        max-width: 1200px;
        border-collapse: collapse;
        margin-top: 20px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      table,
      th,
      td {
        border: 1px solid #ddd;
        padding: 12px 15px;
        text-align: left;
      }

      th {
        background-color: #f2f2f2;
      }

      a.view-profile {
        background-color: #2193b0;
        color: white;
        padding: 8px 12px;
        border-radius: 4px;
        text-decoration: none;
      }

      a.view-profile:hover {
        background-color: #6dd5ed;
      }
    </style>
  </head>
  <body>
    <div>
      <h2>Owners</h2>
    </div>
    <div class="header-links">
      <a href="/admin">home</a>
      <a href="/logout">Logout</a>
      <a href="/admin/profile">Edit Profile</a>
      <a href="/admin/addNewManager">Add New Manager</a>
      <a href="/admin/assignManager">Assign Manager </a>
      <a href="/admin/view_Managers">Managers</a>
      <a href="/admin/view_Owners">Owners</a>
      <a href="/admin/view_Customers">Customers</a>
      <!-- <a href="/admin/view_Rented">Rented Apartments</a> -->
      <a href="/admin/view_Available">Available Apartments</a>
    </div>

    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>USERNAME</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Nid</th>
        <th>No of report</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      <% for(var i=0; i < userlist.length; i++){ %>
      <tr>
        <td><%= userlist[i].fname %></td>
        <td><%= userlist[i].lname %></td>
        <td><%= userlist[i].username %></td>
        <td><%= userlist[i].email %></td>
        <td><%= userlist[i].phone %></td>
        <td><%= userlist[i].nid %></td>
        <td><%= userlist[i].reportNo %></td>
        <td><%= userlist[i].status %></td>
        <td>
          <a
            class="view-profile"
            href="/admin/view_Owners/<%= userlist[i].username %>"
            >View Profile</a
          >
        </td>
      </tr>
      <% } %>
    </table>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
